            diaDoAno = diaDoAno + 31
        }
        if (mes> 8){
            diaDoAno = diaDoAno + 31
        }
        if (mes> 9){
            diaDoAno = diaDoAno + 30
        }
        if (mes> 10){
            diaDoAno = diaDoAno + 31
        }
        if (mes> 11){
            diaDoAno = diaDoAno + 30
        }
        if (mes> 12){
            diaDoAno = diaDoAno + 31
        }
//----------------------------------------------
        if (mes === 1) {
            diaDoAno = dia}
        if (mes === 2) {
            diaDoAno = diaDoAno + dia}
        if (mes === 3) {
            diaDoAno = diaDoAno + dia}
        if (mes === 4) {
            diaDoAno = diaDoAno + dia}
        if (mes === 5) {
            diaDoAno = diaDoAno + dia}
        if (mes === 6) {
            diaDoAno = diaDoAno + dia}
        if (mes === 7) {
            diaDoAno = diaDoAno + dia}
        if (mes === 8) {
            diaDoAno = diaDoAno + dia}
        if (mes === 9) {
            diaDoAno = diaDoAno + dia}
